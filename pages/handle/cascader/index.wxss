.citypicker {
    width: 100%;
    height: 200px;
}

.citybody {
    position: fixed;
    bottom: 0px;
    z-index: 999;
    background-color: white;
    height: 400rpx !important;
}

.cityheader {
    position: absolute;
    top: 0px;
    width: 100%;
    z-index: 4;
}

.city-cancel {
    float: left;
    margin: 20rpx;
    color: #818181;
}

.city-true {
    float: right;
    margin: 20rpx;
    color: #2fb42e;
}

.section .picker {
    background-color: #fff;
    border-bottom: 1px #d9d9d9 solid;
    border-top: 1px #d9d9d9 solid;
    padding: 20rpx;
}

span {
    display: block;
    height: 1.4rem;
    text-overflow: clip;
    overflow: hidden;
    white-space: nowrap;
    font-family: UICTFontTextStyleBody;
    min-height: 1.4rem;
}
.weui-input {
    color: #999;
}
