.main_view {
    margin-bottom: 30rpx;
}

.icon {
    position: fixed;
    bottom: 1%;
    right: 1%;
    height: 60rpx;
    width: 60rpx;
    text-align: center;
    font-size: 40rpx;
    color: #fff;
    cursor: pointer;
    z-index: 1;
}

.icon_bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    border-radius: 5rpx;
    opacity: 0.6;
    opacity: 0.3;
    z-index: -2;
}
.button {
    width: 120rpx;
    height: auto;
    position: fixed;
    bottom: 6%;
    right: 1%;
    z-index: 1;
}

.partition_line {
    width: 100%;
    height: 50rpx;
    border-top: 1rpx solid #e9e9e9;
    border-bottom: 1rpx solid #e9e9e9;
    background: #f1f1f1;
    box-sizing: border-box;
    color: #999;
    font-size: 28rpx;
    line-height: 50rpx;
    padding-left: 16px;
}

.file {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.previewimg {
    width: 220rpx;
    height: 220rpx;
    margin: 2%;
    position: relative;
}
.previewimg image {
    width: 100%;
    height: 100%;
}

.file_add {
    width: 220rpx;
    height: 220rpx;
    margin: 2%;
    border: 1rpx solid #e9e9e9;
    text-align: center;
}
.file_delete {
    position: absolute;
    top: -20rpx;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 50%;
    background: #ff6d6d;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}

.file_add image {
    height: 50%;
    width: 50%;
    margin-top: 25%;
}

.rate_view {
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #e9e9e9;
}

.rate_text {
    padding: 10px 15px;
    font-size: 14px;
    line-height: 24px;
    color: #333;
}
.picker_view {
    border-bottom: 1rpx solid #e9e9e9;
    box-sizing: border-box;
    padding: 10px 15px;
    line-height: 24px;
}
.picker {
    display: flex;
    flex-direction: row;
}
.picker_label {
    font-size: 14px;
    color: #333;
}
.phcolor {
    font-size: 14px;
    color: #999999;
}
.picker_text {
    font-size: 14px;
    color: #333;
    padding-left: 66rpx;
}

.popup textarea {
    padding: 5% 5%;
}

.popup .popup_button {
    padding: 1% 2%;
    border-bottom: 1rpx solid #e9e9e9;
}

.popup .sure {
    font-size: 16px;
    color: #39b839;
    float: right;
}

.popup .cancel {
    font-size: 16px;
    color: #929292;
}

.van-picker__confirm {
    font-size: 16px !important;
    color: #39b839 !important;
}

.van-picker__cancel {
    font-size: 16px !important;
    color: #929292 !important;
}
