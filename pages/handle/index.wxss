.mainbox {
    margin-bottom: 100rpx;
}
.popup {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 101;
}

.popup_bg {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #000;
    z-index: 1;
    opacity: 0.5;
}

.popup_view {
    position: absolute;
    left: 20%;
    right: 0;
    top: 0;
    bottom: 8%;
    background: #fff;
    overflow: auto;
    z-index: 2;
}

.popup_button {
    position: absolute;
    bottom: 0;
    right: 0;
    background: #fff;
    width: 100%;
    height: 60rpx;
    border: 1rpx solid #e9e9e9;
    box-sizing: border-box;
    display: flex;
    overflow: hidden;
}

.popup_reset {
    width: 50%;
    text-align: center;
    line-height: 56rpx;
    font-size: 30rpx;
    cursor: pointer;
}

.popup_sure {
    background: #028ffb;
    color: #fff;
    width: 50%;
    text-align: center;
    line-height: 56rpx;
    font-size: 30rpx;
    cursor: pointer;
}

.popup_contion {
    width: 100%;
}

.contion_title {
    font-size: 30rpx;
    color: #787878;
    padding: 3% 3%;
}

.contion_option_text {
    float: left;
    width: 30%;
    color: #d2d2d2;
    font-size: 26rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    border-radius: 40rpx;
    margin: 0 1.6% 10rpx;
    position: relative;
    background: #f7f7f7;
    cursor: pointer;
}

.active {
    color: #028ffb;
    border: 1rpx solid #028ffb;
}
